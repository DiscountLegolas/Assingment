@model HomeIndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="slaytIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#slaytIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#slaytIndicators" data-slide-to="1"></li>
        <li data-target="#slaytIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://magictoolbox.sirv.com/images/magicslideshow/03/image-slideshow-09.jpg?scale.width=2000" alt="İlk slayt">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://magictoolbox.sirv.com/images/magicslideshow/03/image-slideshow-09.jpg?scale.width=2000" alt="İkinci slayt">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://magictoolbox.sirv.com/images/magicslideshow/03/image-slideshow-09.jpg?scale.width=2000" alt="Üçüncü slayt">
        </div>
    </div>
    <a class="carousel-control-prev" href="#slaytIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#slaytIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<br />
<div class="container bg-transparent">
    <div class="row">
        @foreach (var item in Model.Entries)
        {
            <div class="col-md-4">
                <a href="/Home/Entry/@item.EntryId" class="text-decoration-none text-danger">
                    <div class="card bg-transparent border-success" style="margin-bottom:5px">
                        <div class="card-header"><h5 class="card-title text-truncate">@item.EntryName</h5></div>
                        <div class="card-body">
                            @{
                                if (item.EntryContent.Length > 50)
                                {
                                    var a = item.EntryContent.Substring(0, 50) + " ...";
                                    <p class="card-text">@a</p>
                                }
                                else
                                {
                                    <p class="card-text">@item.EntryContent</p>
                                }
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <br />
    <br />
    <div class="row">
        <a class="btn btn-primary" href="/Home/AddEntry">Add Entry</a>
    </div>
</div>