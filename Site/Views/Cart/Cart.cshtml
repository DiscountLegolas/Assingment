@model Site.Models.PageModels.CartPageModel
@{
    ViewData["Title"] = "Cart";
}
<table class="table bg-transparent">
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td style="width: 125px;height:75px"><img src="@item.Item.ImageSource" style="width: 125px;height:75px"></td>
                <td class="align-middle">@item.Item.Name</td>
                @{
                    var price=item.Count*item.Item.Price;
                    string prices=price+" TL";
                    <td class="align-middle">@prices</td>
                }
                <td class="align-middle"><a class="btn btn-danger" href="/DeleteItem/@item.Item.Id">Delete Item</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="card" style="width:18rem;">
    <div class="card-body">
        <h5 class="card-title">Price:</h5>
        @{
            decimal totalprice=0;
            Model.CartItems.ForEach(x=>{totalprice=totalprice+x.Count*x.Item.Price;});
            string totalprices=totalprice+" TL";
            <p class="card-text">@totalprices</p>
        }
    </div>
    <div class="card-footer"><a class="btn btn-danger">Order</a></div>
</div>
