@model  Site.Models.PageModels.ShopPageModel
@{
    ViewData["Title"] = "Shop Page";
}
<div class="container">
    <div class="row">
        @{ 
            foreach (var item in Model.ShopItems)
            {
                <div class="card border-info mb-3 bg-transparent" style="width:18rem;">
                    <img class="card-img-top" src="@item.ImageSource" alt="TopImage"/>
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-body">
                        @{
                            string price = item.Price + " TL";
                            <a class="card-link text-decoration-none">@price</a>
                        }
                        <a class="card-link btn btn-success" href="/AddToCart/@item.Id">Add To Cart</a>
                    </div>
                </div>
            }
        }
    </div>
</div>